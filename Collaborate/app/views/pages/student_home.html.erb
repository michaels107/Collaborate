<!-- Created 7/22/2020 by Sean Michaels
     HTML for displaying students courses-->
<h1><%= "#{@student.f_name.downcase.capitalize} #{@student.l_name.downcase.capitalize}'s Portal" %></h1>
<br />
<h1><%= "Courses" %></h1>
<table>
  <th>Section Number</th>
  <th>Course Name</th>
  <th>Course Number</th>
  <% @enrolled_in.each do |course| %>
    <tr>
      <td><%= course.section_num %></td>
      <td><%= course.course_name %></td>
      <td><%= course.course_number %></td>
    </tr>
  <% end %>
</table>
<br />
<div>
  <h1><%= "Projects" %></h1>
  <table>
    <th>Project</th>
    <th>Group Name</th>
    <th>Peer Evaluations</th>
    <% @pg.each do |key, value| %>
      <tr>
        <td><%= key  %></td>
        <td><%= value.group_name %></td>
        <td><%= link_to 'Peer Evaluations', peer_evaluation_path(value) %></td>
      </tr>
    <% end %>
  </table>
</div>
